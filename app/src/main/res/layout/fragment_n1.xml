<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="dataModel"
            type="com.cmex.fragmentsandadaptivescreen.presentation.ViewModelNumbers" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_main">


    <TextView
        android:id="@+id/tvMinSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/fon_min"
        android:gravity="center"
        android:padding="@dimen/_15sdp"
        android:textColor="@color/littleRed"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        app:bindSetTextFromInt="@{dataModel.minList}"
        app:layout_constraintBottom_toBottomOf="@+id/tvMaxSum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMaxSum"
        tools:text="20" />

    <TextView
        android:id="@+id/tvMaxSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/fon_max"
        android:gravity="center"
        android:padding="@dimen/_15sdp"
        android:textColor="@color/littleGreen"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        app:bindSetTextFromInt="@{dataModel.maxList}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineTop1"
        tools:text="20" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineBottom1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:text="@{dataModel.numbersModel.listNumbers.get(0).toString()}"
                android:layout_weight="1"
                android:theme="@style/styleAnswers"
                tools:text="01" />


            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{dataModel.numbersModel.listNumbers.get(1).toString()}"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:theme="@style/styleAnswers"
                tools:text="02" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{dataModel.numbersModel.listNumbers.get(2).toString()}"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:theme="@style/styleAnswers"
                tools:text="03" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{dataModel.numbersModel.listNumbers.get(3).toString()}"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:theme="@style/styleAnswers"
                tools:text="04" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{dataModel.numbersModel.listNumbers.get(4).toString()}"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:theme="@style/styleAnswers"
                tools:text="05" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{dataModel.numbersModel.listNumbers.get(5).toString()}"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:theme="@style/styleAnswers"
                tools:text="06" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fon_my_temp"
        android:text="@{dataModel.timerModel}"
        android:gravity="center"
        android:padding="@dimen/_20sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_22sdp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTop1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00:00" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <ProgressBar
        android:id="@+id/pbMin"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="120"

        app:myMin="@{dataModel.minList}"

        android:progressDrawable="@drawable/fon_progress_min"
        android:secondaryProgress="@{100}"
        app:progressScaled="@{dataModel.settingsModel.minSum}"
        app:layout_constraintBottom_toTopOf="@+id/pbMax"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMaxSum"
        app:layout_constraintVertical_chainStyle="packed"/>

    <ProgressBar
        android:id="@+id/pbMax"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="@{dataModel.settingsModel.maxNumber*6}"
        android:progress="@{dataModel.maxList}"
        android:progressDrawable="@drawable/fon_progress_max"
        android:secondaryProgress="@{dataModel.settingsModel.maxSum}"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBottom1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pbMin" />

    <TextView
        android:id="@+id/tvMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/_3sdp"
        android:paddingLeft="@dimen/_3sdp"
        android:textStyle="bold"
        app:bindSetTextFromInt="@{dataModel.settingsModel.minSum}"
        app:layout_constraintBottom_toTopOf="@+id/pbMin"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="00"/>

    <TextView
        android:id="@+id/tvMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/_3sdp"
        android:paddingLeft="@dimen/_3sdp"
        android:textStyle="bold"
        app:bindSetTextFromInt="@{dataModel.settingsModel.maxSum}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pbMax"
        tools:text="100"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>